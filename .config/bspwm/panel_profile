COLOR_FOREGROUND="#FF$COLOR_FOREGROUND"
COLOR_BACKGROUND="#FF$COLOR_BACKGROUND"
COLOR_TITLE="#FF$COLOR_TITLE"
COLOR_ACTIVE="#FF$COLOR_ACTIVE"
COLOR_OCCUPIED="#FF$COLOR_OCCUPIED"
COLOR_FREE="#FF$COLOR_FREE"
COLOR_URGENT="#FF$COLOR_URGENT"
