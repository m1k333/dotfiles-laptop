Config {
         font = "xft:Terminus:size=12:bold:antialias=true"
       , bgColor = "black"
       , fgColor = "#ABABAB"
       , position = Top
       , border = NoBorder
       , borderColor = "#646464"
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %StdinReader% }{ %battery% : %date% "
       , lowerOnStart = True
       , hideOnStart = False
       , allDesktops = True
       , overrideRedirect = True
       , pickBroadest = False
       , persistent = True
       , commands = [
                      Run StdinReader
                    , Run Battery [
                                    "--template" , "<acstatus>"
                                  , "--Low"      , "20"        -- units: %
                                  , "--High"     , "70"        -- units: %
                                  , "--low"      , "red"
                                  , "--normal"   , "orange"
                                  , "--high"     , "green"
                                  , "--"
                                  , "-o"   , "<left>%"
                                  , "-O"   , "Charging"
                                  , "-i"   , "Charged"
                                  ] 50

                    , Run Date "%F %T" "date" 10
                    ]
       }

